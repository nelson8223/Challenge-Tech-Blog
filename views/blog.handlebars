<div class="row">
  <div class="col-auto">
    <h1>Hello, {{name}}!</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h2>Write your blog here:</h2>

    <form class="form blog_name">
      <div class="form-group">
        <label for="blog_name"> Blog name:</label>
        <input class="form-input" type="text" id="blog_name" name="blog_name" />
      </div>
      <div class="form-group">
        <label for="date_created">Date:</label>
        <input class="form-input" type="number" id="date_created" name="date_created" />
      </div>
      <div class="form-group">
        <label for="blog_description">Blog Description:</label>
        <textarea class="form-input" id="blog_description" name="blog_description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

   {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>HERE YOUR BLOG:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog_name}}">{{date_created}}>{{blog_description}} </a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE  HERE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>